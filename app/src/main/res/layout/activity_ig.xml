<?xml version="1.0" encoding="utf-8"?>
<!-- res/layout/item_post.xml -->

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <!-- User profile image -->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageViewProfile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/poto1"
        android:scaleType="centerCrop"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="16dp"/>

    <!-- User name and post time -->
    <TextView
        android:id="@+id/textViewUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="John Doe"
        android:textStyle="bold"
        android:layout_marginTop="9dp"
        android:layout_toRightOf="@id/imageViewProfile"

        android:layout_marginStart="8dp"/>

    <TextView
        android:id="@+id/textViewPostTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2 hours ago"
        android:textColor="@android:color/darker_gray"
        android:layout_below="@id/textViewUserName"
        android:layout_toEndOf="@id/imageViewProfile"
        android:layout_marginStart="8dp"
        android:layout_toRightOf="@+id/textViewUserName"/>

    <!-- Post image -->
    <ImageView
        android:id="@+id/imageViewPost"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/imageViewProfile"
        android:layout_marginTop="8dp"
        android:src="@drawable/poto4"
        android:scaleType="centerCrop"/>

    <!-- Like button -->
    <ImageView
        android:id="@+id/imageViewLike"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@id/imageViewPost"
        android:layout_marginTop="8dp"

        android:layout_alignParentStart="true"/>

    <!-- Comment button -->
    <ImageView
        android:id="@+id/imageViewComment"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@id/imageViewPost"
        android:layout_marginTop="8dp"

        android:layout_toEndOf="@id/imageViewLike"
        android:layout_marginStart="16dp"/>

    <!-- Share button -->
    <ImageView
        android:id="@+id/imageViewShare"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@id/imageViewPost"
        android:layout_marginTop="8dp"

        android:layout_toEndOf="@id/imageViewComment"
        android:layout_marginStart="16dp"/>
</RelativeLayout>