<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/textprofile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Home"
            android:textAlignment="center"
            android:textColor="@color/hijau"
            android:textSize="24dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/hijau"
            app:cardCornerRadius="15dp"
            app:cardElevation="10dp"
            android:id="@+id/cardtentang">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="40dp"
                android:background="@color/hijau"
                android:orientation="vertical"
                android:padding="20dp">

                <ImageView
                    android:id="@+id/prof"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/tiga"
                    />

                <TextView
                    android:id="@+id/full_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/prof"
                    android:text="Reunitez!"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="30dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/full_name"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/prof"
                    android:includeFontPadding="false"
                    android:text="Relation unforgotable intwenty second generation"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:textStyle="italic" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="-50dp">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp">

                <EditText
                    android:layout_width="480dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="1dp"
                    android:drawableEnd="@drawable/baseline_troubleshoot_24"
                    android:hint="    search"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:background="@drawable/custom_edittext"
                    android:textStyle="italic" />
            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="252dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:text="Muhammad Hafiz!"
            android:textColor="@color/hijau"
            android:textSize="40sp"
            android:textStyle="bold">
        </TextView>

        <TextView
            android:layout_width="238dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:text="Selamat datang di aplikasi Reunitez"
            android:textColor="@color/hijau"
            android:textSize="20sp"
            android:textStyle="bold">
        </TextView>


        <Button
            android:layout_width="130dp"
            android:layout_height="48dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20sp"
            android:text="dashboard"
            android:backgroundTint="@color/hijau"
            android:id="@+id/dash"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="-3dp"
            android:layout_marginEnd="3dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="9dp"
            android:background="@color/white"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="89dp"
                android:text="Reunitez"
                android:textAlignment="center"
                android:textColor="@color/hijau"
                android:textSize="30dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-3dp"
                android:layout_marginBottom="5dp"
                android:text="relationship unforgotable in twenty second generation"
                android:textAlignment="center"
                android:textColor="@color/hijau"
                android:textSize="12sp"
                android:textStyle="italic" />

        </LinearLayout>

    </LinearLayout>



</LinearLayout>