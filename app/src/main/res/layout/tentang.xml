<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/backtentang"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/baseline_keyboard_backspace_24"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"/>
"
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="About"
            android:textSize="30dp"
            android:layout_marginLeft="-70dp"
            android:textAlignment="center"
            android:fontFamily="@font/anya"
            android:textColor="@color/hijau"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="220dp"
            android:id="@+id/rntz"
            android:layout_height="220dp"
            android:src="@drawable/satu"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reunitez"
            android:id="@+id/txtrntz"
            android:layout_below="@+id/rntz"
            android:textSize="50dp"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:textColor="@color/hijau"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="12sp"
            android:layout_below="@id/txtrntz"
            android:layout_centerHorizontal="true"
            android:text="Adalah singkatan dari Relation unforgotable intwenty second generation yang artinya Hubungan yang tak terlupakan pada generasi kedua puluh, dan reunite sendiri mempunyai arti bersatu kembali."/>

    </RelativeLayout>

    </LinearLayout>

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:stepSize="@integer/material_motion_duration_short_1"
        android:layout_marginTop="80dp"
        android:outlineSpotShadowColor="@color/hijau"
        android:id="@+id/bla"
        android:theme="@style/MyRatingBar"
        />
    <Button
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:backgroundTint="@color/hijau"
        android:text="rating"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        android:id="@+id/btnrating">
    </Button>


</LinearLayout>