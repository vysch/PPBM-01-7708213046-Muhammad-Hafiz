<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/hijau">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/hijau">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hi, Hafiz"
            android:textAlignment="center"
            android:layout_marginTop="30dp"
            android:textSize="45sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:fontFamily="@font/satoe"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="create your best gallery"

            android:textAlignment="center"
            android:layout_marginTop="0dp"
            android:textSize="10sp"
            android:textColor="@color/white"
            />
        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="5000dp"
            app:cardCornerRadius="30dp"
            android:backgroundTint="@color/white">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="20dp"
                    >

                    <androidx.cardview.widget.CardView
                        android:layout_width="150dp"
                        android:layout_height="250dp"
                        app:cardCornerRadius="20dp"
                        android:layout_marginTop="70dp"
                        android:layout_marginLeft="10dp"

                        >
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="250dp"
                            android:src="@drawable/poto1"
                            android:scaleType="centerCrop"
                            />


                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="2023"
                        android:textAlignment="center"
                        android:layout_marginTop="5dp"
                        android:textStyle="bold|italic"/>
                    <androidx.cardview.widget.CardView
                        android:layout_width="150dp"
                        android:layout_height="250dp"
                        app:cardCornerRadius="20dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        >
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="250dp"
                            android:src="@drawable/poto2"
                            android:scaleType="centerCrop"
                            />


                    </androidx.cardview.widget.CardView>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="10dp">
                    <androidx.cardview.widget.CardView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        app:cardCornerRadius="20dp"
                        android:layout_marginTop="100dp"
                        android:layout_marginLeft="10dp"
                        android:backgroundTint="@color/hijau"
                        >
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="250dp"
                            android:src="@drawable/poto3"
                            android:scaleType="centerCrop"
                            />


                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="2022"
                        android:textAlignment="center"
                        android:padding="5dp"
                        android:textStyle="bold|italic"/>
                    <androidx.cardview.widget.CardView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        app:cardCornerRadius="20dp"
                        android:backgroundTint="@color/hijau"
                        android:layout_marginLeft="10dp"

                        >
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="250dp"
                            android:src="@drawable/poto4"
                            android:scaleType="centerCrop"
                            />
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="2021"
                        android:textAlignment="center"
                        android:padding="5dp"
                        android:textStyle="bold|italic"/>
                    <androidx.cardview.widget.CardView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        app:cardCornerRadius="20dp"
                        android:layout_marginLeft="10dp"
                        android:backgroundTint="@color/hijau"
                        >
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="250dp"
                            android:src="@drawable/poto5"
                            android:scaleType="centerCrop"
                            />
                    </androidx.cardview.widget.CardView>


                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/backpoto"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="40dp"
                    android:src="@drawable/baseline_keyboard_backspace_24"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="gallery"
                    android:textAlignment="center"
                    android:textSize="30dp"
                    android:layout_marginLeft="-70dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/anya"
                    android:textColor="@color/hijau"/>

            </LinearLayout>





        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>



</LinearLayout>