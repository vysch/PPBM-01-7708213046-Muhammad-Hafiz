<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.chat2"
    android:background="@color/hijau">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:layout_width="70dp"
        android:layout_height="69dp"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:src="@drawable/tiga" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="-15dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reunitez"
            android:textAlignment="center"
            android:textSize="59sp"
            android:textStyle="bold|italic"
            android:textColor="@color/white"
            />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Relation Unforgotabble In Twenty Second Generation"
        android:textAlignment="center"
        android:textStyle="bold|italic"
        android:textSize="10sp"
        android:textColor="@color/white"
        />

    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp"/>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="5000dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="25dp"
            android:background="@color/white"
            >


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Registrasi!"
                android:textAlignment="center"
                android:textColor="@color/hijau"
                android:textSize="30dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="silahkan buat akun anda!"
                android:textStyle="italic"
                android:textSize="10sp"
                android:textAlignment="center"
                android:textColor="@color/hijau"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Username"
                android:textSize="15sp"
                android:layout_marginTop="30dp"

                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Username"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="italic"
                android:drawableEnd="@drawable/baseline_done_24"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Password"
                android:textSize="15sp"
                android:layout_marginTop="20dp"

                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:textStyle="italic"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:drawableEnd="@drawable/baseline_done_24"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Address"
                android:textSize="15sp"
                android:layout_marginTop="20dp"

                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Address"
                android:textStyle="italic"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:drawableEnd="@drawable/baseline_done_24"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remember Me"
                android:textSize="18dp"
                android:textColor="@color/hijau"
                />

            <Button
                android:id="@+id/submit"
                android:layout_width="250dp"
                android:layout_height="65dp"
                android:layout_gravity="center"
                android:text="Submit"
                android:textColor="@color/white"

                android:layout_marginTop="50dp"
                android:backgroundTint="@color/hijau"
                />


            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp"/>

</FrameLayout>