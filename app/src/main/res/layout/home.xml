<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/textprofile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Home"
            android:textAlignment="center"
            android:textColor="@color/hijau"
            android:textSize="24dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/hijau"
            app:cardCornerRadius="15dp"
            app:cardElevation="10dp"
            android:id="@+id/cardtentang">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="40dp"
                android:background="@color/hijau"
                android:orientation="vertical"
                android:padding="20dp">

                <ImageView
                    android:id="@+id/prof"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/tiga"
                    />

                <TextView
                    android:id="@+id/full_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/prof"
                    android:text="Reunitez!"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="30dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/full_name"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/prof"
                    android:includeFontPadding="false"
                    android:text="Relation unforgotable intwenty second generation"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:textStyle="italic" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="-50dp">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp">

                <EditText
                    android:layout_width="480dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="1dp"
                    android:drawableEnd="@drawable/baseline_troubleshoot_24"
                    android:hint="    search"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:background="@drawable/custom_edittext"
                    android:textStyle="italic" />
            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_marginTop="-30dp"
            android:orientation="horizontal"
            >

            <androidx.cardview.widget.CardView
                android:layout_width="300dp"
                android:layout_height="400dp"
                android:layout_gravity="center"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="20dp"
                android:backgroundTint="@color/white"
                app:cardElevation="10dp"
                app:cardCornerRadius="40dp">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="300dp"
                    android:layout_height="340dp"
                    app:cardElevation="20dp"
                    app:cardCornerRadius="40dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="370dp"
                        >

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="370dp"
                            android:layout_centerInParent="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/poto1" />
                    </RelativeLayout>

                </com.google.android.material.card.MaterialCardView>

                <Button
                    android:layout_width="450dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="170dp"
                    android:backgroundTint="@color/hijau"
                    android:src="@drawable/satu"
                    android:text="DASHBOARD"
                    android:textColor="@color/white" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="300dp"
                android:layout_height="400dp"
                android:layout_gravity="center"
                android:layout_marginRight="20dp"
                android:backgroundTint="@color/hijau"
                app:cardElevation="20dp"
                app:cardCornerRadius="40dp">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="300dp"
                    android:layout_height="340dp"
                    app:cardElevation="20dp"
                    app:cardCornerRadius="40dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="370dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="370dp"
                            android:scaleType="center"
                            android:src="@drawable/das"/>
                    </RelativeLayout>

                </com.google.android.material.card.MaterialCardView>
                <Button
                    android:layout_width="400dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="170dp"
                    android:id="@+id/logoreu"
                    android:text="DASHBOARD"
                    android:textColor="@color/white"
                    android:src="@drawable/satu"
                    android:backgroundTint="@color/hijau"
                    android:layout_gravity="center"
                    />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="300dp"
                android:layout_height="400dp"
                android:layout_gravity="center"
                android:backgroundTint="@color/hijau"
                app:cardElevation="20dp"
                app:cardCornerRadius="40dp">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="300dp"
                    android:layout_height="340dp"
                    app:cardElevation="20dp"
                    app:cardCornerRadius="40dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="370dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="370dp"
                            android:scaleType="center"
                            android:src="@drawable/poto5"/>
                    </RelativeLayout>

                </com.google.android.material.card.MaterialCardView>
                <Button
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="170dp"
                    android:text="DASHBOARD"
                    android:textColor="@color/white"
                    android:src="@drawable/satu"
                    android:backgroundTint="@color/hijau"
                    android:layout_gravity="center"
                    />
            </androidx.cardview.widget.CardView>


        </LinearLayout>
    </HorizontalScrollView>
</LinearLayout>